#!/bin/bash

source etc/SETTINGS

# Define the path of the original file
FILE="$USR_CONFIG/xfce4/xfce4-screenshooter"

# Create or overwrite the file with the desired content
cat << EOF > "$FILE"
app=ristretto
last_user=
last_extension=png
screenshot_dir=file:/home/$USER/Media/Screenshots
enable_imgur_upload=true
show_in_folder=false
action=1
delay=2
region=1
show_mouse=1
show_border=1
EOF
