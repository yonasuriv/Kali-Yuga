######################################################################################
## Define Directories
######################################################################################

USER=$(whoami)

# SCRIPT VARIABLES

TOP=$(git rev-parse --show-toplevel) # Script home directory

LIB=$TOP/assets
BIN=$TOP/bin
TMP=$TOP/.tmp

USR=$BIN/usr
ENV=$BIN/env
CORE=$BIN/core
PLUGINS=$BIN/plugins
APPEARANCE=$BIN/appearance

# USER VARIABLES

USR_MEDIA=$HOME/Media
USR_WALLPAPERS=$USR_MEDIA/Wallpapers
USR_SCREENSHOTS=$USR_MEDIA/Screenshots

USR_CONFIG=$HOME/.config
USR_LIGHTDM=$HOME/.local/share/lightdm
USR_FONTS=/usr/share/fonts		 # $HOME/.local/share/fonts
USR_ICONS=/usr/share/icons		 # $HOME/.local/share/icons
USR_THEMES=/usr/share/themes		 # $HOME/.local/share/themes

######################################################################################
## Define overall appearance
######################################################################################

THEME="Kali-Yuga-Nord"
