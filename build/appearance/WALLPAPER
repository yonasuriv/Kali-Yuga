#!/bin/bash

source build/SETTINGS

######################################################################################
## Configure Eww Widget
######################################################################################
echo -e "$LB$D Setting up the Wallpaper...$LB$END"
######################################################################################

#!/bin/bash

# Your wallpaper directory and file
wallpaper_path="$DIR_WALLPAPERS/whitewaves.jpg"

# Set the wallpaper for specific monitors using their last-image properties
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorHDMI-1/workspace0/last-image -s "$wallpaper_path"
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorLVDS-1/workspace0/last-image -s "$wallpaper_path"
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorVGA-1-2/workspace0/last-image -s "$wallpaper_path"
